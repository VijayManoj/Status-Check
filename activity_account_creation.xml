<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Account_Creation">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/droid_sans"
        android:gravity="center"
        android:padding="10dp"
        android:text="Status Check "
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="92dp"
        android:layout_height="69dp"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="90dp"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="Name"

        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginTop="241dp"
        android:gravity="center"
        android:text="Mail ID"

        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginTop="302dp"
        android:gravity="center"
        android:text="SignIn As"

        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginTop="363dp"
        android:gravity="center"
        android:text="ID"

        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginTop="424dp"
        android:gravity="center"
        android:text="Password"

        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginTop="485dp"
        android:gravity="center"
        android:text="CabinNo"

        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_marginTop="546dp"
        android:gravity="center"
        android:text="MobileNo"

        android:textSize="20dp" />

    <Button
        android:id="@+id/Submit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="607dp"
        android:text="Create Account " />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="302dp" />
    <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:hint="Eg: James"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/mailId"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="241dp"
        android:ems="10"
        android:hint="Eg:james@gmail.com"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="424dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/Id"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="363dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/cabinno"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="485dp"
        android:ems="10"
        android:hint="Eg:AB-1 323-G"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/mobile"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="546dp"
        android:ems="10"
        android:hint="Eg:6304236807"
        android:inputType="number" />

</RelativeLayout>